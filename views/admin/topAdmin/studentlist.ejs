<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=\, initial-scale=1.0">
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/index.css">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />


    <title>Students List</title>
</head>
<body style="background-color: #B1D0E0;">
    <section class="vh-100" style="background-color: #B1D0E0;">
        <div class="container py-5 h-100 ">

         
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
              
          <button class="btn btn-primary btncolor adminentering" style="margin: 1rem auto 3rem;" type="button"><a href="#" > Students list</a></button>
          <button class="btn btn-primary btncolor adminentering" style="margin: 1rem auto 3rem;"type="button"><a href="/admin/top-admin/student-form/student-group" target="_blank"> Students group</a></button>


          <div class="pagetitle">
            <h4 class="fw-normal mb-3 pb-3" style="letter-spacing:1px ; "><b> Students List</b></h4>
          </div>
              <div class="card" style="border-radius: 1rem;">
                <table class="table" >
                    <thead>
                      <tr>
                        <th scope="col"> </th>
                        <th scope="col">No. </th>
                        <th scope="col" class="name-row">Full Name</th>
                        <th scope="col" class="email-row">Email</th>
                        <th scope="col"> </th>
                      </tr>
                    </thead>
                    <tbody>
                     
                      <% student.forEach((st,index) => { %>
                          <tr>
                            <th scope="row" > </th>
                            <td><%= ++index %></td>
                            <td><%= st.fullName %></td>
                            <td><%= st.email %></td>
                            <td class="icon text-center">  
                                <a href="/admin/top-admin/student-form/update-student/<%= st.id %>" >
                                  <img src="/images/edit.png" alt="edit" width="20%"> 
                                </a>
                                <a href="/admin/top-admin/student-form/delete-student/<%= st.id %>" onclick="isDelete()">
                                  <img class="bin " id="btn" src="/images/bin.png" alt="delete" width="20%"> 

                                </a>
                              </td>
                          </tr>  
                      <%  }); %> 
                    </tbody> 
                  </table>
                  
              </div>

              <button class="btn btn-primary btncolor " data-bs-toggle="modal" data-bs-target="#edit-modal"  style="margin: 3rem 0; float: left;" type="button">Insert +</button>
              <button class="btn btn-primary btncolor " style="margin: 3rem 0; float:right;" type="button">Done</button>
               
              
              <div class="modal fade" id="edit-modal" tabindex="-1" aria-labelledby="modal-title" aria-hidden="true">
                           
                <div class="modal-dialog">
                  <form  action="/admin/top-admin/student-form/add-new-student" method="post">
                  <div class="modal-content">
                    <div class="modal-header">
                       <h5 class="modal-title" id="modal-title">Add new Student</h5>
                       <button type="button" class="btn-close" data-bs-dismiss="modal"
                       aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                
                       <label for="modal-email" class="form-label"></label>
                       <input type="text" class="form-control" id="modal-fullname" placeholder="Enter Full name" name="fullName" required>
                       <label for="modal-email" class="form-label"></label>
                       <input type="email" class="form-control" id="modal-email" placeholder="Enter the email address" name="email" required>
                       <label for="modal-email" class="form-label"></label>
                       <input type="text" class="form-control" id="modal-grade" placeholder="Enter the grade" name="grade" required>
                       <label for="modal-email" class="form-label"></label>
                       <div class="custom-search">
                        <input type="password" class="custom-search-input" placeholder="Generate password" name="password" required>
                        <button class="custom-search-botton" type="submit"><img src="/image/password.png" alt="" width="25%" style="margin-right: -20px;"></button>  
                      </div>
                      </div>
                    <div class="modal-footer">
                       <button class="btn btn-primary btncolor" type="submit">Add</button>
                    </div>
                  </div>
                        
                  </form>
                </div>
                    </div>
              
            </div>
          </div>
        </div>
      </section>

      <script>
        function isDelete(){
          return confirm('are you sure to delete the record?')
        }
      </script>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
      <script src="https://use.fontawesome.com/96f1c5daf2.js"></script>
</body>
</html>