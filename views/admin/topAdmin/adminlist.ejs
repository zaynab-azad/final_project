<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=\, initial-scale=1.0">
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/index.css">
    
    <title>Admin List</title>
</head>



<body style="background-color: #B1D0E0;">
    <section class="vh-100" style="background-color: #B1D0E0;">
        <div class="container py-5 h-100 ">

        
          
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="pagetitle">
                    <h4 class="fw-normal mb-3 pb-3" style="letter-spacing:1px ; "><b> Admin List</b></h4>
                  </div>
              <div class="card" style="border-radius: 1rem;"> 
                  <table class="table" >
                      <thead>
                        <tr>
                          <th scope="col"> </th>
                          <th scope="col">No. </th>
                          <th scope="col" class="name-row">Full Name</th>
                          <th scope="col" class="email-row">Email</th>
                          <th scope="col"> </th>
                        </tr>
                      </thead>
                      <tbody>
                        <% admins.forEach((admin,index) => { %>
                          <tr>
                              <th scope="row" > </th>
                              <td><%= ++index %></td>
                              <td><%= admin.fullName %></td>
                              <td><%= admin.email %></td>
                              <td class="icon text-center">  
                                  <a href="/admin/top-admin/admin-form/update-admin/<%= admin.id %>" >
                                    <img src="/images/edit.png" alt="edit" width="20%"> 
                                  </a>
                                  <a href="/admin/top-admin/admin-form/delete-admin/<%= admin.id %>" onclick="isDelete()">
                                    <img class="bin " id="btn" src="/images/bin.png" alt="delete" width="20%"> 

                                  </a>
                                </td>
                            </tr>  
                      <% }); %>
                      
                    
                      </tbody> 
                  
                  </table>
                  
              </div>

              <button class="btn btn-primary btncolor " data-bs-toggle="modal" data-bs-target="#edit-modal" style="margin: 3rem 0; float: left;" type="button">Insert +</button>
              <button class="btn btn-primary btncolor " style="margin: 3rem 0; float:right;" type="button">Done</button>
               
            </div>
          </div>
        </div>

       
      </section>
      
 
   


<div class="modal fade" id="edit-modal" tabindex="-1" aria-labelledby="modal-title"
aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
         <h5 class="modal-title" id="modal-title">Add new Admin</h5>
         <button type="button" class="btn-close" data-bs-dismiss="modal"
         aria-label="Close"></button>
      </div>
      <form action="/admin/top-admin/admin-form/add-admin-list" method="post">
        <div class="modal-body">
    
           <label for="modal-email" class="form-label"></label>
           <input type="text" class="form-control" id="modal-fullname" placeholder="Enter Full name" name="fullName">
           <label for="modal-email" class="form-label"></label>
           <input type="email" class="form-control" id="modal-email" placeholder="Enter the email address" name="email">
           <label for="modal-email" class="form-label"></label> 
           <div class="custom-search">
            <input type="password" class="custom-search-input" placeholder="Generate password" name="password">
            <button class="custom-search-botton" type="submit"><img src="/images/password.png" alt="" width="25%" style="margin-right: -20px;"></button>  
          </div>
          </div>
          <div class="modal-footer">
             <button class="btn btn-primary btncolor" type="submit">Add</button>
          </div>

      </form>
    </div>
  </div>
</div>



<div class="modal fade" id="redit-modal" tabindex="-1" aria-labelledby="modal-title"
aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
         <h5 class="modal-title" id="modal-title">Edit the row</h5>
         <button type="button" class="btn-close" data-bs-dismiss="modal"
         aria-label="Close"></button>
      </div>
      <div class="modal-body">
  
         <label for="modal-email" class="form-label"></label>
         <input type="text" class="form-control" id="modal-fullname" placeholder="Edit Full name">
         <label for="modal-email" class="form-label"></label>
         <input type="email" class="form-control" id="modal-email" placeholder="Edit the email address">
         
         
        </div>
      <div class="modal-footer">
         <button class="btn btn-primary btncolor">Save</button>
      </div>
    </div>
  </div>
</div>



<script>
  function isDelete(){
    return confirm('are you sure to delete the record?')
  }
</script>


      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
  
                            
      
        


</body>
</html>