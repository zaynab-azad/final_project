<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=\, initial-scale=1.0">
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
<link rel="stylesheet" href="/index.css">
    
    <title>project List</title>
</head>
<body style="background-color: #B1D0E0;">
    <section class="vh-100" style="background-color: #B1D0E0;">
        <div class="container py-5 h-100 ">

         
          
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
              <button class="btn btn-primary btncolor adminentering" style="margin: 1rem auto 3rem;" type="button"><a href="/admin/top-admin/lecturers-form/lecturers-list" target="_blank" > lecturers list</a></button>
              <button class="btn btn-primary btncolor adminentering" style="margin: 1rem auto 3rem;" type="button"><a href="#" > projects</a></button>
    
              <div class="pagetitle">
                <h4 class="fw-normal mb-3 pb-3" style="letter-spacing:1px ; "><b> project List</b></h4>
              </div>

              <div class="card" style="border-radius: 1rem;">
                
                
                <% projects.forEach((project,index) => {  %>
                  <form action="/admin/top-admin/email" method="post" style="display: flex; flex-direction: column;">
                    <table class="table" >
                        <thead>
                          <tr>
                            <th scope="col"> </th>
                            <th scope="col"><%= ++index %></th>
                            <th scope="col"><%= project.projectAuthor %></th>
                            <th scope="col"><%= project.projectName %> </th>
                            <th scope="col"> </th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <th scope="row" > </th>
                            <td></td>

                            <input name="projectId" type="text" value='<%= project.id %>' style="display: none;"  />
                            
                            <td><input class="inputbox" type="text" placeholder="Note" name="textBox"></td>
                            <td><%= project.projectInfo %></td>
                          </tr>
                        </tbody> 
                    </table> 
                      <button class="btn btn-primary btncolor " style="margin: 3rem 0; float:right;" type="submit"  >Send</button>
                    
                  </form>
                  <% }); %>
              </div>
              
               
            </div>
          </div>
        </div>
      </section>
      <script src="https://use.fontawesome.com/96f1c5daf2.js"></script>
</body>
</html>